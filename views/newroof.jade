extends layout
block body
  div(class="container")
    form(action="/newroof", method="POST")
      fieldset
        legend Add roof
        p
          label Name 
          input(name="roof[name]", type="text")
        p
          label Address 
          input(name="roof[location]", type="text")
        p
          label Picture 
          input(name="roof[picture]", type="text")
        p   
          button Submit
        p 
          a(href="/") Go back
        
